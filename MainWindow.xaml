<Window x:Class="student.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:student"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Attendance" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontSize="25" FontFamily="Franklin Gothic Cond" FontStretch="UltraCondensed"/>

        <Grid Grid.Column="0" Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
            </Grid.RowDefinitions>

            <Ellipse Width="150" Height="150" StrokeThickness="3" Stroke="Black">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Asset/me.png" />
                </Ellipse.Fill>
            </Ellipse>

            <TextBlock Text="Today's Date:" Grid.Column="0" Grid.Row="1" TextDecorations="Underline"/>
            <TextBlock  Grid.Column="0" Grid.Row="2" TextDecorations="Underline"/>
           
            
            
            <TextBlock Grid.Row="3" Text="Attedance % Per Sub: " TextDecorations="Underline" Margin="0,10,0,10"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <TextBlock Text="MATHS: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>

                <TextBlock Text="ECE: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>
                <TextBlock Text="CHEM: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>

                <TextBlock Text="PPS: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>
                
                <TextBlock Text="EVS: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,5,0">
                    <TextBlock Width="30" Height="30"/>
                </Border>
            </StackPanel>

            <TextBlock Grid.Row="5" Text="Attedance % Per Lab: " TextDecorations="Underline" Margin="0,10,0,10"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal">
                <TextBlock Text="CHEM: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>

                <TextBlock Text="PPS: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>
                <TextBlock Text="ECE: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>

                <TextBlock Text="WORKSHOP: " VerticalAlignment="Center" Margin="10,0,10,0"/>
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBlock Width="30" Height="30"/>
                </Border>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Subjects:" Grid.Column="0"/>
            <TextBlock Text="Labs:" Grid.Column="1"/>

            <Button x:Name="L1" Content="MATHS (BP)" Width="150" Margin="10" Grid.Row="1" Grid.Column= "1"/>
            <Button x:Name="L2" Content="ECE (CD)" Width="150" Margin="10" Grid.Row="2"   Grid.Column= "1"/>
            <Button x:Name="L3" Content="CHEM (YP)" Width="150" Margin="10" Grid.Row="3"  Grid.Column= "1"/>
            <Button x:Name="L4" Content="PPS (UK)" Width="150" Margin="10" Grid.Row="4"   Grid.Column= "1"/>

            <Button x:Name="P1" Content="MATHS (BP)" Width="150" Margin="10" Grid.Row="1"/>
            <Button x:Name="P2" Content="ECE (CD)" Width="150" Margin="10" Grid.Row="2"/>
            <Button x:Name="P3" Content="CHEM (YP)" Width="150" Margin="10" Grid.Row="3"/>
            <Button x:Name="P4" Content="PPS (UK)" Width="150" Margin="10" Grid.Row="4"/>
            <Button x:Name="P5" Content="EVS (BKS)" Width="150" Margin="10" Grid.Row="5"/>
            <Button HorizontalAlignment="Center" Content="OK" Width="100" Margin="10" Grid.Row="6" Grid.ColumnSpan="2"/>

            <Button Content="PRESENT ALL" Width="150" Margin="10" Grid.Row="7" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
            <Button Content="ABSENT ALL" Width="150" Margin="10" Grid.Row="7" HorizontalAlignment="Right" Grid.ColumnSpan="2"/>

            <Button Content="Analysis" Grid.ColumnSpan="2" BorderBrush="Red" BorderThickness="1" Width="150" Margin="0,0,5,2" Grid.Row="8" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

        </Grid>
        
    </Grid>
</Window>
